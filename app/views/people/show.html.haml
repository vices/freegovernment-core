#person
  #person_photo_etc
    #person_photo
      .photo= image_tag @user.avatar.url(:large)
    #person_actions
      .actions
    - if @user.is_adviser?
      #person_advisees_block.block
        .title Advisers
    - else
      #person_advisers_block.block
        .title Advisees
    #person_contacts_block.block
      .title Contacts
      .avatars
        - @person.contacts.each do |contact|
          =link_to image_tag(contact.user.avatar.url(:small)), url(:person, :id => contact.user.username)
    #person_groups_block.block
      .title Groups
      .avatars
        - @person.groups.each do |group|
          =link_to image_tag(group.user.avatar.url(:small)), url(:group, :id => group.user.username)
    #watched_bills.block
      .title Watched Bills
    #watched_polls.block
      .title Watched Polls
  #person_details_etc
    #person_details
      .name== #{@person.full_name} | #{@user.username}
      - unless @user.address.nil?
        .address= @user.address
    #recent_activity.block
      .title.alt_title Recent Activity
      .content
        %ul
          %li
            %span Today
            Sophia voted YES on poll Do rock have feelings? Sophia voted YES on poll Do rock have feelings? Sophia voted YES on poll Do rock have feelings?
            %form
              %button
                %span Delete
          %li
            %span Today
            Sophia voted YES on poll Do rock have feelings?
            %form
              %button
                %span Delete
    - unless @person.description.nil?
      #description.block
        .title About Me
        .content
          = @person.description.render_textile
    - unless @person.political_beliefs.nil?
      #political_beliefs.block
        .title Political Beliefs
        .content
          = h @person.political_beliefs
    - unless @person.interests.nil?
      #interests.block
        .title Interests
        .content
          = h @person.interests
