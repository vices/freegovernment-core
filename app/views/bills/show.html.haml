#bill
  #main
    #title
      .number
        == FG BILL ##{@bill.id}
      %h2 Condemning the further use of Lorem ipsum as filler text on mockups.
    = partial 'polls/voting_options', :title => 'Do you support this bill?', :bottom => link_to('Show bill poll page Â»', '#'), :poll => Poll.first, :vote => logged_in? ? Poll.first.votes(:user_id => session[:user_id]).first || Vote.new : Vote.new
  
  #content
    .left
      .topics
        .title Discussion topics
        %ul
          %li lorem ipsum kinda rocks guys
          %li lorem ipsum isn't supreme for mocks
          %li what's up holla!
          %li jabberwock is so much better
    .right
      - unless @bill.summary.nil?
        #summary
          %h3 Summary
          %p= h(@bill.summary).gsub("\n",'<br />')
      - if @bill.sectioned_text.nil? || @bill.sectioned_text.empty?
        #sections
          .section
            %h3 Bill Text
            %p= h(@bill.text).gsub("\n",'<br />')  
      - else
        #sections
          - @bill.sectioned_text.each do |section|
            .section
              %h3= section[0]
              %p= section[1]
              .comments_link
                %a
                  3
                  %span comments
          .entire_bill
            %a See Entire Bill
