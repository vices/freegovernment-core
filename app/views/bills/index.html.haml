#bills_index
  %h2.index_header
    Bills
    .caption debate bills paragraph-by-paragraph
    .caption create new bills and seek out the support of others
  .list_and_filters
    .list
      - @bills_page.each do |bill|
        .bill
          .img= link_to image_tag(bill.user.avatar(:small)), profile_url(bill.user)
          .main
            .number
              ==[FG Bill ##{bill.id}]
              /%span FG BILL #287
            %h3
              = link_to h(bill.title), url(:bill, :id => bill.id)
            .description
              - unless bill.summary.nil?
                %h4 Summary
                %p= h bill.summary.ellipsis(150)
              - else
                %h4 Bill Text
                %p= h bill.text.ellipsis(150)
            .tags
              tags:
              - if true || poll.tags.nil?
                %span no associated tags
            .actions
              = link_to "view related poll", url(:poll, :id => bill.poll_id)
              |
              = link_to "view bill", url(:bill, :id => bill.id)
      = merb_paginate @bills_page
    .filters
      #bill_search
      #bill_creation.attention
        .title Want to create a bill to share with FG community?
        = link_to "Click to get started", url(:new_bill)
      #bill_tags.filter
        .title Bill Tags
