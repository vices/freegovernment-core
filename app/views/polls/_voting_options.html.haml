.voting_options
  - unless box_title.empty?
    .title
      = box_title
  .current_vote== Your vote is set to #{vote.selection}
  .top_forms
    - form_for Vote.new, :action => url(:votes), :class => 'top' do
      = hidden_control :poll_id, :value => poll.id
      = hidden_control :selection, :value => 'yes'
      = submit_button "Yes", :class => "#{ vote.selection == 'yes' ? 'active'  : '' }"
    - form_for Vote.new, :action => url(:votes), :class => 'top' do
      = hidden_control :poll_id, :value => poll.id
      = hidden_control :selection, :value => 'undecided'
      = submit_button "Undecided", :class => "#{ vote.selection == 'undecided' ? 'active'  : '' }"
    - form_for Vote.new, :action => url(:votes), :class => 'top' do
      = hidden_control :poll_id, :value => poll.id
      = hidden_control :selection, :value => 'no'
      = submit_button "No", :class => "#{ vote.selection == 'no' ? 'active'  : '' }"
  - if !logged_in? || !@current_user.is_adviser?
    %div
    - form_for Vote.new, :action => url(:votes) do
      = hidden_control :poll_id, :value => poll.id
      = hidden_control :selection, :value => 'adviser'
      = submit_button "Let Advisers Decide", :class => "#{ vote.selection == 'adviser' ? 'active'  : '' }"
  - unless bottom.empty?
    .bottom
      = bottom
