.voting_options
  .current_vote== Your vote is set to #{vote.selection}
  - form_for Vote.new, :action => url(:votes) do
    = hidden_control :poll_id, :value => poll.id
    = submit_button "Yes", :name => 'vote[position]', :value => 'yes', :class => "#{ vote.selection == 'yes' ? 'active'  : '' }"
    = submit_button "Undecided", :name => 'vote[position]', :value => 'undecided', :class => "#{ vote.selection == 'undecided' ? 'active'  : '' }"
    = submit_button "No", :name => 'vote[position]', :value => 'no', :class => "#{ vote.selection == 'yes' ? 'no'  : '' }"
    - if !logged_in? || !@current_user.is_adviser?
      %div
        = submit_button "Let Advisers Decide", :name => 'vote[position]', :value => 'adviser', :class => "#{ vote.selection == 'adviser' ? 'active'  : '' }"
