#new_post
  - form_for @new_post, :action => url(:posts), :class => 'full' do
    %h1 New Post
    = error_messages_for @new_post
    = hidden_control :topic_id, :value => @topic.id
    = text_area_control :text, :label => 'Your post ( <a href="http://hobix.com/textile/">Textile enabled</a> )'
    .actions
      .cancel
        = link_to "Cancel", url(:topic, :id => @topic.id)
      .submit
        = submit_button "Submit post"
