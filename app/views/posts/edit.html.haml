#new_post
  - form_for @post, :action => url(:post, :id => @post.id), :class => 'full' do
    %h1 Edit Your Post
    = error_messages_for @post
    = text_area_control :text, :label => 'Your post ( <a href="http://hobix.com/textile/">Textile enabled</a> )'
    .actions
      .cancel
        = link_to "Cancel", post_url(@post)
      .submit
        = submit_button "Submit post"
